package com.user;

import java.io.IOException;
import java.util.List;

import javax.servlet.RequestDispatcher;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

@WebServlet("/ViewServlet")
public class ViewServlet extends HttpServlet {
	private static final long serialVersionUID = 1L;

	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
	
		 try {
	            // Fetch all users from the database
	           List<user> users = userDbUtil.getAllUsers();
	            
	            // Set the users as an attribute in the request
	            request.setAttribute("users", users);
	            
	            
	            if (users.isEmpty()) {
	                System.out.println("<h2>No users found</h2>");
	            } else {
	                // Print user details
	                System.out.println("<h2>User List</h2>");}
	                
	                
	            // Forward the request to a JSP for rendering
	          //  RequestDispatcher dis = request.getRequestDispatcher("ViewUsers.jsp");
			//	dis.forward(request, response);
	        } catch ( Exception e) {
	            e.printStackTrace();
	            // Handle SQLException
	        }
	}



}
